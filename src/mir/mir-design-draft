Unreachable
Branch
  Mode  : [ Unconditional, Conditional ]
  Op    : BasicBlock *
BranchTable:
  DefaultTarget : BasicBlock *
  DispatchTargets : <BasicBlock *>
Return
  Values: <Instruction *>*


Call:
  Op    : <Instruction *>*
CallIndirect:
  Type  : bytecode::FunctionType
Select:
  True  : Instruction *
  False : Instruction *
  Op    : Instruction *

LocalGet
  Index : bytecode::LocalIDX
LocalSet
  Index : bytecode::LocalIDX
  Value : Instruction *
GlobalGet
  Index : bytecode::GlobalIDX
GlobalSet
  Index : bytecode::GlobalIDX
  Value : Instruction *

Constant:
  Value : variant<I32, I64, F32, F64>

IntUnaryOp
  Op    : [ Eqz, Clz, Ctz, Popcnt ]
  N     : Instruction *
IntBinaryOp
  Op    : [ Eq, Ne, LtS, LtU, GtS, GtU, LeS, LeU, GeS, GeU,
            Add, Sub, Mul, DivS, DivU, RemS, RemU, And, Or, Xor,
            Shl, ShrS, ShrU, Rotl, Rotr ]
  LHS   : Instruction *
  RHS   : Instruction *

FPUnaryOp
  Op    : [ Abs, Neg, Ceil, Floor, Trunc, Nearest, Sqrt ]
  N     : Instruction *
FPBinaryOp
  Op    : [ Eq, Ne, Lt, Gt, Le, Ge, Add, Sub, Mul, Div, Min, Max, CopySign ]
  LHS   : Instruction *
  RHS   : Instruction *

Load
  Type  : bytecode::ValueType
  Width : [ 8, 16, 32 ]
  Signed: boolean
Store
  Width : [ 8, 16, 32 ]
MemorySize
MemoryGrow
  Op    : Instruction *
MemoryGuard
  Op    : Instruction *

Cast:
  Mode  : [ Conversion,
            Reinterpret,
            SaturatedConversion ]
  Type  : bytecode::ValueType
Extend:
  Width : [ 8, 16, 32 ]

Phi
  Flow  : <Instruction *>*